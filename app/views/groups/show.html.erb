<div class="card pt-4 m-2 px-4 w-auto">
    <div class="row justify-content-arround px-3 mb-2">
        <div class="mr-2">
            <i class="material-icons fs-60 card-header-primary p-1 c-white">group</i>
        </div>
        <div class="d-flex flex-column col justify-content-around">
            <p class="font-weight-bold">
            <%=  @group.name %>
            </p>
        </div>    
    </div>
    <p>This loan group is created by <b><%= @group.author.name %></b> on <%= @group.created_at.strftime("%B %d, %Y at %I:%M%p" ).downcase %> </p>
    <hr class="m-0" />
    <div class="row mx-1 justify-content-between">
        <b class="h4">
            TOTAL LOAN
        </b>
        <p class="h4">$ <%= @total_loans %></p>
    </div>
</div>

<% @loans.each do |loan| %>

       <div class="card m-2 p-3 w-auto">
        <div class="row justify-content-arround px-3">
            <div class="mr-2">
               <%= icon_loan(loan) %>
            </div>
            <div class="d-flex flex-column col justify-content-around">
                <div class="row mx-1 justify-content-between" >
                    <p class="font-weight-bold">
                        <%= loan.name %>
                    </p>
                    <b class="">$ <%= loan.amount %></b>
                </div>
                <hr class="m-0" />

              <div class="row mx-1 justify-content-between">
                <label class="font-italic">
                  <%= loan.created_at.strftime("%b %d, %Y" ).downcase %>
                </label>
                <label class="font-italic" ><%= loan_author(loan) %></label>
              </div>
            </div>
        </div>
      </div>
    <% end %>



          