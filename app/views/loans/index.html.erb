<section class="users-section">
    <nav class="navbar navbar-expand-xl c-bg-primary c-white">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <%= link_to content_tag(:i,"keyboard_backspace", class:"material-icons c-white"), home_path %>
            </div>

            <div class="navbar-wrapper">
            <p class="navbar-brand" href="#">MY LOANS</p>
            </div>
            <div class="navbar-wrapper">
                <%= f.submit "Next", class: 'btn btn-link c-white' %>  
            </div>
        </div>
    </nav>
    <div>
      <div class="card px-3 pb-3">
         <div class="p-0 m-0 info info2 info-horizontal">
          <div class="icon">
            <button class="btn c-bg-primary btn-fab btn-fab btn-round">
              <i class="material-icons">work</i>
            </button>
          </div>
          <div class="description row justify-content-between pt-2">
            <p class="info-title">Total open loans</p>
            <h4 class="info-title">$ 100</h4>
          </div>
        </div>
      </div>
    </div>

    
    <% @loans.each do |loan| %>

      <div class="card m-2 p-3 w-auto">
        <div class="row justify-content-between px-3">
          <div class="d-flex">
            <div class="mr-2">
              <i class="material-icons fs-60 card-header-danger p-1 c-white">groups</i>
            </div>
            <div class="d-flex flex-column justify-content-around">
              <p class="font-weight-bold">
                <%= link_to loan.name, loan %>
              </p>
              <div>
                <hr class="m-0" />
                <label class="date"><%= loan.created_at.strftime("%b %d, %Y - %I:%M%p" ).downcase %></label>
              </div>
            </div>
          </div>
          <h3 class="align-self-center">$ <%= loan.amount %></h3>
        </div>
      </div>
    <% end %>

    <div class="row">
      <%= link_to 'New loan', new_loan_path, class: "btn btn-block p-4 btn-lg c-bg-secondary" %>
    </div>

</section>
